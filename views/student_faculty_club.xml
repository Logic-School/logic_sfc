<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.actions.act_window" id="details_student_faculty_action">
        <field name="name">Student Faculty Club</field>
        <field name="res_model">student.faculty</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="SFC" id="menu_sfc"
              action="details_student_faculty_action"
              sequence="6"/>
    <menuitem name="SFC" id="menu_sfc_1"
              action="details_student_faculty_action"
              parent="menu_sfc"
              sequence="1"/>

    <record id="student_faculty_club_tree_view" model="ir.ui.view">
        <field name="name">Student Faculty Club</field>
        <field name="model">student.faculty</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_id"/>
                <field name="topic"/>
                <!-- <field name="exam_type"/> -->
            </tree>

        </field>
    </record>

    <record id="student_faculty_club_form_view" model="ir.ui.view">
        <field name="name">Student Faculty Club</field>
        <field name="model">student.faculty</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Student Faculty Club">
                <header>
                    <button name="submit_for_payment" string="Submit for Payment" help="Click here to submit the draft for payment" type="object" class="oe_highlight" attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button name="register_payment" string="Register Payment" help="Click here to pay the total amount" type="object" class="oe_highlight" attrs="{'invisible':[('state','!=','submit_payment')]}"/>
                    <button name="reject_payment" string="Reject" help="Click here to pay the total amount" type="object" class="btn-danger" attrs="{'invisible':[('state','!=','submit_payment')]}"/>
                    <button name="reset_to_draft" string="Reset to Draft" help="Click here to reset the record to draft state" type="object" class="btn-warning" attrs="{'invisible':[('state','!=','submit_payment')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit_payment,paid,reject"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" text="PAID" bg_color="bg-success" attrs="{'invisible':[('state','!=','paid')]}"/>
                    <widget name="web_ribbon" text="REJECTED" bg_color="bg-danger" attrs="{'invisible':[('state','!=','reject')]}"/>
                    <group>
                        <group>
                            <field name="topic"/>
                            <field name="batch_id"/>
                            <field name="student_id" domain="[('batch_id','=',batch_id)]"/>
                            <field name="coordinator"/>
                            <label for="photo_show"/>
                            <div class="o_row">
                                <field name="photo_show"/>
                                <button name="show_hide_photo" type="object"  class="btn-success" >Show/Hide</button>                               
                                <!-- <button name="custom_method" string="Copy to Clipboard" type="button" class="o_form_button_edit btn btn-primary"/>                            </div> -->
                            </div>
                            <field name="photo" widget="image" attrs="{'invisible':[('photo_show','=',False)]}"/>
                        </group>
                        <group>
                            <field name="students_count"/>
                            <field name="start_datetime"/>
                            <field name="end_datetime"/>
                            <field name="hours"/>
                            <field name="payment_rate" widget="monetary"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Banking Details">
                                <group>
                                    <group>
                                        <field name="account_name" help="Enter the account holder's name here(as in Passbook)"/>
                                        <field name="account_no"/>
                                        <field name="bank_name"/>
                                        <field name="ifsc_code"/>
                                        <field name="bank_branch"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                    <group name="note_group" col="6" class="mt-2 mt-md-0">
                                        <group class="oe_subtotal_footer oe_right" colspan="2">
                                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                                <label for="amount_total"/>
                                            </div>
                                            <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                                        </group>
                                        <div class="oe_clear"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="details_student_faculty_rate_action">
        <field name="name">Payment Rate</field>
        <field name="res_model">student.faculty.rate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Rate" id="menu_sfc_rate"
              action="details_student_faculty_rate_action"
              parent="menu_sfc"
              sequence="2"/>

    <record id="student_faculty_rate_tree_view" model="ir.ui.view">
        <field name="name">Payment Rate</field>
        <field name="model">student.faculty.rate</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="rate" widget="monetary"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>
    
</odoo>